<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.puzzle.controller.client_controller.MainController"
            styleClass="root-pane"
            prefWidth="1200" prefHeight="700">

    <top>
        <Label text="Chào mừng bạn đến với hệ thống"
               styleClass="title-label"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="15" alignment="CENTER"
              prefWidth="400" prefHeight="200">
            <Label fx:id="messageLabel" text="Loading..." />
            <Button text="Reload" fx:id="reloadButton" />
        </VBox>
    </center>

</BorderPane>
