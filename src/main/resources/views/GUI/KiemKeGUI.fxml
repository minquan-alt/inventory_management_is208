<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane stylesheets="@../../static/css/style.css" prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: #dbe8f2;" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.puzzle.controller.client_controller.InventoryCheckController">

    <children>
        <Label alignment="TOP_CENTER" layoutX="13.0" layoutY="11.0" prefHeight="377.0" prefWidth="110.0"
               style="-fx-background-color: #FFFFFF; -fx-background-radius: 10;" text="MENU">
            <font>
                <Font name="System Bold" size="25.0"/>
            </font>
        </Label>

        <!-- DASHBOARD -->
        <Button fx:id="btnDashboard" layoutX="13.0" layoutY="141.0" mnemonicParsing="false"
                prefHeight="26.0" prefWidth="110.0" style="-fx-background-color: #FFFFFF;" text="DASHBOARD" onAction="#handleDashboard">
            <font>
                <Font name="Arial Bold" size="12.0"/>
            </font>
        </Button>

        <!-- KHO -->
        <Button layoutX="13.0" layoutY="187.0" mnemonicParsing="false"
                prefHeight="26.0" prefWidth="110.0" style="-fx-background-color: #0924bc;" text="KHO" textFill="WHITE">
            <font>
                <Font name="Arial Bold" size="12.0"/>
            </font>
        </Button>

        <!-- SẢN PHẨM -->
        <Button fx:id="btnSanPham" layoutX="13.0" layoutY="237.0" mnemonicParsing="false"
                prefHeight="26.0" prefWidth="110.0" style="-fx-background-color: #FFFFFF;" text="SẢN PHẨM" textFill="#080808"
                >
            <font>
                <Font name="Arial Bold" size="12.0"/>
            </font>
        </Button>

        <Label fx:id="userNameLabel" layoutX="57.0" layoutY="354.0" text="UserName"/>
        <Label layoutX="146.0" layoutY="85.0" prefHeight="304.0" prefWidth="438.0"
               style="-fx-background-radius: 20; -fx-background-color: #FFFFFF;"/>
        <Label layoutX="142.0" layoutY="22.0" prefHeight="54.0" prefWidth="438.0"
               style="-fx-background-radius: 20; -fx-background-color: #FFFFFF;"/>

        <TextField layoutX="191.0" layoutY="95.0" prefHeight="26.0" prefWidth="367.0" promptText="Search"/>

        <!-- TABLE -->
        <TableView fx:id="inventoryCheckTable" layoutX="172.0" layoutY="164.0"
                   prefHeight="211.0" prefWidth="386.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="95" text="ID"/>
                <TableColumn fx:id="startDateColumn" prefWidth="192" text="Ngày bắt đầu"/>
                <TableColumn fx:id="noteColumn" prefWidth="192" text="Ghi Chú"/>
            </columns>
        </TableView>

        <!-- NÚT KIỂM KÊ -->
        <Button fx:id="btnKiemKe" layoutX="447.0" layoutY="33.0" mnemonicParsing="false"
                prefHeight="32.0" prefWidth="110.0" style="-fx-background-color: #0924bc;" text="KIỂM KÊ" textFill="WHITE"
                onAction="#handleKiemKe">
            <font>
                <Font name="Arial Bold" size="9.0"/>
            </font>
        </Button>

        <!-- YÊU CẦU XUẤT KHO -->
        <Button fx:id="handleYeuCauXuatKho" layoutX="310.0" layoutY="33.0" mnemonicParsing="false"
                prefHeight="32.0" prefWidth="110.0"
                style="-fx-background-color: #FFFFFF; -fx-border-width: 2; -fx-border-color: #a1d6ff; -fx-border-radius: 5;"
                text="YÊU CẦU XUẤT KHO" textFill="#3d55cf" onAction="#handleYeuCauXuatKho" >
            <font>
                <Font name="Arial Bold" size="9.0"/>
            </font>
        </Button>

        <!-- YÊU CẦU XUẤT KHO (DƯ PHÒNG) -->
        <Button fx:id="btnYeuCauNhapKho" layoutX="172.0" layoutY="33.0" mnemonicParsing="false"
                prefHeight="32.0" prefWidth="110.0"
                style="-fx-background-color: #FFFFFF; -fx-border-width: 2; -fx-border-color: #a1d6ff; -fx-border-radius: 5;"
                text="YÊU CẦU NHẬP KHO" textFill="#3d55cf" onAction="#handleYeuCauNhapKho">
            <font>
                <Font name="Arial Bold" size="9.0"/>
            </font>
        </Button>

        <!-- TẠO KIỂM KÊ -->
        <Button onAction="#handleTaoKiemKe" layoutX="471.0" layoutY="128.0" mnemonicParsing="false"
                style="-fx-background-color: #46a0ef;" text="TẠO KIỂM KÊ" textFill="WHITE"/>

        <!-- ICONS -->
        <ImageView fitHeight="26.0" fitWidth="26.0" layoutX="57.0" layoutY="33.0" pickOnBounds="true" preserveRatio="true"/>
        <ImageView fitHeight="26.0" fitWidth="26.0" layoutX="159.0" layoutY="95.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../../../../../../search-vector-icon.jpg"/>
            </image>
        </ImageView>
        <ImageView fitHeight="26.0" fitWidth="26.0" layoutX="21.0" layoutY="351.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../../../../../OIP.jpeg"/>
            </image>
        </ImageView>
    </children>
</AnchorPane>
